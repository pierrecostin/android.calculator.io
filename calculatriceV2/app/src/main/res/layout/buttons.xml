<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:visibility="visible">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-43dp"
        android:background="#d9e4f1"
        android:columnCount="5"
        android:paddingLeft="4.5sp"
        android:rowCount="5">

        <ImageButton
            android:id="@+id/boutonBack"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:src="@drawable/ic_baseline_backspace_24"
            android:textSize="0sp">

        </ImageButton>

        <Button
            android:id="@+id/boutonClearAll"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="@string/ce"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonNegatif"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="±"
            android:textSize="25sp"></Button>


        <Button
            android:id="@+id/boutonRacine"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="√"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonSept"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="7"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonHuit"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="8"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonNeuf"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="9"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonDivision"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="/"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonModulo"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="%"
            android:textSize="25sp"></Button>


        <Button
            android:id="@+id/boutonQuatre"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="4"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonCinq"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="4sp"
            android:autoText="false"
            android:background="@drawable/round_button"
            android:text="5"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonSix"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="6"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonMultiplication"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="*"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonRapport"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="1/x"
            android:textSize="25sp"></Button>


        <Button
            android:id="@+id/boutonUn"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="1"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonDeux"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="2"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonTrois"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="@string/_3"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonSoustraction"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="-"
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonEqual"
            android:layout_width="72dp"
            android:layout_height="128dp"
            android:layout_row="3"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="="
            android:textSize="50sp"></Button>


        <Button
            android:id="@+id/boutonZero"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="0"
            android:textSize="25sp"></Button>


        <Button
            android:id="@+id/boutonPoint"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="."
            android:textSize="25sp"></Button>

        <Button
            android:id="@+id/boutonAddition"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_margin="4sp"
            android:background="@drawable/round_button"
            android:text="+"
            android:textSize="25sp"></Button>


    </GridLayout>
</RelativeLayout>